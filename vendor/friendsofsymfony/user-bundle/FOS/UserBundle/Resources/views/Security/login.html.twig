{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
<div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form class="box login" action="{{ path("fos_user_security_check") }}" method="post">
	<fieldset class="boxBody">
	  <label>Username</label>
               <input type="text" tabindex="1" id="username"  placeholder="PremiumPixel"  name="_username" value="{{ last_username }}" required="required" />
   
	  <label>Password</label>
          <input type="password" tabindex="2" id="password" name="_password" required="required" />

	</fieldset>
	<footer>
         

	  <label><input type="checkbox" tabindex="3">{{ 'Remember me'|trans({}, 'FOSUserBundle') }}</label>
	  <input type="submit" class="btnLogin" value="Login" tabindex="4">
	</footer>
</form>


